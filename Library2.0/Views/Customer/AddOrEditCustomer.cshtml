@model Customer

<div class="container">
    <h3>ADD NEW CUSTOMER</h3>
    <form class="form-horizontal" asp-action="AddOrEditCustomer">
        <input type="hidden" asp-for="CustomerId" />


        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="FirstName">Firstname</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" placeholder="Enter Firstname">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="LastName">Lastname</label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" placeholder="Enter Lastname">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="City">City</label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" placeholder="Enter City">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="Address">Address</label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" placeholder="Enter Address">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="ZipCode">ZipCode</label>
            <div class="col-sm-10">
                <input asp-for="ZipCode" class="form-control" placeholder="Enter Zipcode">
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="PhoneNumber">PhoneNumber</label>
            <div class="col-sm-10">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="contianer my-3 bg-transparent">
            <div class="col-md-12 text-left">
                <div class="form-grop">
                    <input type="submit" value="Submit" class="btn btn-outline-dark" />
                    <a asp-action="Index" class="btn btn-outline-dark"> View all customers</a>
                </div>

            </div>
        </div>
    </form>
</div>

