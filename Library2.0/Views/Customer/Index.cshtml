@model IEnumerable<Customer>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="text-center">
            <h2>Library customers</h2>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Firstname</th>
                    <th scope="col">Lastname</th>
                    <th>
                        <a asp-action="AddOrEditCustomer" class="btn btn-outline-dark">New</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>


                        <td>@Html.DisplayFor(modelItem => item.CustomerId)</td>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td> @Html.DisplayFor(modelItem => item.LastName)</td>

                        <td>
                            <form asp-action="Delete" asp-route-id="@item.CustomerId">
                                <a asp-action="AddOrEditCustomer" asp-route-id="@item.CustomerId" class="btn btn-outline-warning">UPDATE</a>

                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure to delete this customer?')">DELETE</button>
                                <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-outline-info">DETAILS</a>
                            </form>
                        </td>
                    </tr>


                }


        </table>

    </div>

</div>
